@model ShopFast.Models.Order
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form asp-controller="Cart" asp-action="Checkout" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="StreetAddress">Street Address:</label>
        <input class="form-control" asp-for="StreetAddress" />
        <span asp-validation-for="StreetAddress"></span>
    </div>
    <div class="form-group">
        <label for="City">City:</label>
        <input class="form-control" asp-for="City" />
        <span asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <label for="State">State:</label>
        <input class="form-control" asp-for="State" />
        <span asp-validation-for="State"></span>
    </div>
    <div class="form-group">
        <label for="Zip">Zip:</label>
        <input class="form-control" asp-for="Zip" />
        <span asp-validation-for="Zip"></span>
    </div>
    <div class="form-group">
        <label for="FakeCreditCardNumber">Fake Credit Card Number:</label>
        <input class="form-control" asp-for="FakeCreditCardNumber" />
        <span asp-validation-for="FakeCreditCardNumber"></span>
    </div>
    <input type="hidden" asp-for="UserId" data-val="false" />
    <input type="hidden" asp-for="Status" data-val="false" />
    <!-- Your existing form fields -->
    <button type="submit" class="btn btn-primary">Submit Payment</button>
</form>
